FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
        libgl1 \
        libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY scripts/requirements-llm.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt
COPY scripts/run_tflite_detector.py /app/run_tflite_detector.py
COPY assets/models/objects /app/assets/models/objects
ENTRYPOINT ["python", "/app/run_tflite_detector.py"]
